<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Edit A Listing</h3>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="title" value="<%=listing.title%>" required class="form-control">
                    <div class="valid-feedback">
                        Title Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Author</label>
                    <textarea name="listing[author]" id="description" required class="form-control"><%=listing.author%></textarea>
                    <div class="invalid-feedback">
                        Please Enter A Valid Description!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]" type="text" id="image" value="<%=listing.image%>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" id="price" value="<%=listing.price%>" required class="form-control">
                    <div class="invalid-feedback">
                        Please Enter A Valid Price!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Publisher</label>
                    <input type="text" name="listing[publisher]" id="location" value="<%=listing.location%>" required class="form-control">
                    <div class="invalid-feedback">
                        Please Enter A Valid Location!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">ISBN</label>
                    <input type="text" name="listing[isbn]" id="country" value="<%=listing.country%>" required class="form-control">
                    <div class="invalid-feedback">
                        Please Enter A Valid Country!
                    </div>
                </div>
                <button class="btn btn-dark add-btn">Edit Listing</button>
                <br><br>
            </form>
        </div>
    </div>
    
</body>
</html>
